$include /etc/inputrc

set editing-mode vi

set show-mode-in-prompt on

$if mode=vi

	set keymap vi-command
	Control-a: beginning-of-line
	Control-b: backward-char
	Control-d: delete-char
	Control-e: end-of-line
	Control-f: forward-char
	Control-i: complete
	Control-k: kill-line
	Control-l: clear-screen
	Control-y: yank
	Control-p: previous-history
	Control-n: next-history
	m: backward-char
	n: next-history
	e: previous-history
	i: forward-char
	f: end-of-word
	u: vi-insertion-mode
	l: vi-undo

	set keymap vi-insert
	Control-a: beginning-of-line
	Control-b: backward-char
	Control-d: delete-char
	Control-e: end-of-line
	Control-f: forward-char
	Control-i: complete
	Control-k: kill-line
	Control-l: clear-screen
	Control-y: yank
	Control-p: previous-history
	Control-n: next-history

	## Enable Alt-arrows
	"\e[1;3D": backward-word
	"\e[1;3C": forward-word

$endif
